#Import Modules

import sys
import time
import calendar
import random
import strings
import os
import path

#Create specific email list

yahoo = 'yahoo.com'
gmail = 'gmail.com'
hotmail = 'hotmail.com'

#Create the empty list to be filled with email information.

email_list = []

#Define funtions

#Function for generating a random set of strings
def generateEmail(size=9, chars=string.ascii_uppercase + string.digits):
    for i in email_list:
        while len(email_list) < 300:
            return ''.join(random.choice(chars) for _ in range(size))
            email_list.append(_ + yahoo)
            email_list.append(_ + gmail)
            email_list.append(_ + hotmail)
            
#New email generation
generateEmail()

